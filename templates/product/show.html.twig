{% extends 'base.html.twig' %}

{% block title %}{{ product.name }} - Ma Boutique Ecommerce{% endblock %}

{% block content %}
    <h1>{{ product.name }}</h1>

   <div class="row">
      <div class="col-md-5">
         <img src="/uploads/productPicture/{{ product.illustration }}" alt="{{ product.name }}" class="img-fluid">
      </div>
      <div class="col-md-7 my-auto">
         <h2>{{ product.name }}</h2>
         <p>{{ product.subtitle }}</p>
         <span class="product-price">{{ (product.price / 100)|number_format(2,',','.') }}â‚¬</span>
         <hr>
         <p>
            {{ product.description }}
         </p>
         <a href="{{ path('add_to_cart', {'id' : product.id}) }}" class="btn btn-primary">Ajouter au panier</a>
      </div>
   </div>
   <hr>
   <h2>Nos meilleurs produits du moment</h2>
   <div class="row">
      {% for product in products %}
            <div class="col-md-3">
               {% include 'product/single_product.html.twig' %}
            </div>
      {% endfor %}
   </div>
    
{% endblock %}
