{% extends 'base.html.twig' %}

{% block title %}Mon compte - Ma Boutique Ecommerce{% endblock %}

{% block content %}
    <h1>Mon compte</h1>
    Bienvenue {{app.user.firstname|capitalize}} dans votre compte.
    
    {% if is_granted('ROLE_ADMIN') %}
    <hr>
    <a href="/admin">Vous êtes administrateur, accéder au backoffice</a>
    <hr>
    {% endif %}
    
    <div class="row">
        <div class="col-md-4">
            <div class="account-item text-center">
                <img src="{{ asset('assets/img/password.png') }}" alt="modifier mon mot de passe"><br>
                <a href="{{ path('account_password') }}">Modifier mon mot de passe</a>
            </div>
        </div>
        <div class="col-md-4">
            <div class="account-item text-center">            
                <img src="{{ asset('assets/img/contact-book.png') }}" alt="gérer mes adresses"><br>
                <a href="{{ path('account_address') }}">Gérer mes adresses</a>
            </div>
        </div>
        <div class="col-md-4">
            <div class="account-item text-center">
                <img src="{{ asset('assets/img/shopping-bag.png') }}" alt="voir mes commandes"><br>
                <a href="{{ path('account_order') }}">Mes commandes</a>
            </div>
        </div>
    </div>
    
{% endblock %}
